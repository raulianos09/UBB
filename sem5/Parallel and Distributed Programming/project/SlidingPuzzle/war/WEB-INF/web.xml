<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
  
  <servlet>
  <servlet-name>solverServlet</servlet-name>
  <servlet-class>be.dramaix.ai.slidingpuzzle.server.ResolveServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>solverServlet</servlet-name>
  	<url-pattern>/slidingpuzzle/solve</url-pattern>
  </servlet-mapping>
  
    
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SlidingPuzzle.html</welcome-file>
  </welcome-file-list>

</web-app>
