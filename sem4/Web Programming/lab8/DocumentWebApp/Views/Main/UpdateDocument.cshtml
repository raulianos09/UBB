
@{
    Layout = null;
    ViewBag.Title = "Update Document";


    DocumentWebApp.Models.Document document = (DocumentWebApp.Models.Document) ViewData["document"];
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style media="screen">
        main {
            padding: 2.5em 5% 0 5%;
        }


        #updateDocumentButton {
            margin-top: 20px;
            margin-left: 45%;
        }
    </style>
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/documentApp/updateDocument.js" charset="utf-8"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Main">DocumentManager</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Main/AddDocument">Add Document</a></li>
                <li class="nav-item"><a class="nav-link" href="/Main">Browse Documents</a></li>
            </ul>
        </div>
    </nav>


    <main>
        <h1>Update document #@document.Id</h1>
        <hr>

        <form>
            <input type="hidden" id="id" value="@document.Id">

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Title" value="@document.Title" required>
            </div>

            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" placeholder="Author" value="@document.Author" required>
            </div>

            <div class="form-group">
                <label for="pages">Number of pages</label>
                <input type="number" class="form-control" id="pages" placeholder="# pages" value="@document.NumberOfPages" required>
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                <input type="text" class="form-control" id="type" placeholder="Type" value="@document.Type" required>
            </div>


            <div class="form-group">
                <label for="format">Example select</label>
                <select class="form-control" id="format" value="@document.Format" required>
                    <option selected hidden>@document.Format</option>
                    <option value="pdf">pdf</option>
                    <option value="doc">doc</option>
                    <option value="docx">docx</option>
                </select>
            </div>

                <button id="updateDocumentButton" class="btn btn-primary">Update Document</button>
        </form>
    </main>


</body>
</html>


