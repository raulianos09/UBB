
@{
    Layout = null;
    ViewBag.Title = "Documents";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/documentApp/getTableData.js" type="text/javascript"></script>
    <script src="~/Scripts/documentApp/filter.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <style media="screen">
        main {
            padding: 2.5em 5% 0 5%;
        }

        .search-form {
            display: flex;
            flex-direction: row;
            margin: 30px 0 30px;
        }

        .select-search {
            width: 200px;
            border-radius: 0;
        }

        #searchDocumentButton {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

        .input-search {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Main">DocumentManager</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Main/AddDocument">Add Document</a></li>
                <li class="nav-item"><a class="nav-link" href="/Main">Browse Documents</a></li>
            </ul>
        </div>
    </nav>

    <main>
        <h2>Browse documents</h2>

        <div class="search-form">
            <input type="text" class="form-control input-search" id="search" placeholder="Search">
            <select class="form-control select-search" id="format" required>
                <option value="1">title</option>
                <option value="2">author</option>
                <option value="4">type</option>
                <option value="5">format</option>
            </select>
            <button id="searchDocumentButton" type="submit" class="btn btn-primary">Search</button>
        </div>
        <p>Last used filter: <b>None</b></p>

        <table id="documentTable" class="table">
            <tr>
   
                <th>Title</th>
                <th>Author</th>
                <th>No.Pages</th>
                <th>Type</th>
                <th>Format</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </table>
    </main>
</body>
</html>


